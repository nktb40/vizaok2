<div class="container  pad-top-bot-50">
 <div class="row"> 
 	<div class="col-lg-9">
		<div class="panel panel-default">
	       <div class="panel-heading">
	       <h3>
		       <%= link_to "Виза в "+@visa.country.name, "" %> /
		       <%= link_to @visa.visatype.name, "" %> /
		       <%= link_to @visa.visatype.subtype, "" %>
	       </h3></div>
	       <div class="panel-body panel-grey">
	       	 <div class="row col-lg-6 mar-left-0">
	       	 		<div class="well pad-0 panel-grey">
    	 					<h3 class="mar-0"><span class="text-underline" ><%= @visa.name %></span></h3>
       	 			</div>
       	 			<p><b class="text-underline">Описание</b>: <%= @visa.description %></p>
						<p>
							<%= link_to "", :class=>"btn btn-info" do %>
								<span class="glyphicon glyphicon-save"></span>	
								Скачать черновик анкеты для визы		
					       <% end %> 
						</p>
	       	 </div>
	       	 <div class="row col-lg-6 mar-left-20">
				   	<p><%= image_tag "USA_STD_ACDM.jpg", :class=>"img-responsive" %></p>
				 </div>
	       </div>
	    </div>
    		<div class="panel panel-default">
	       	<div class="panel-heading">
					<h3><span class="glyphicon glyphicon-folder-open"></span>&nbsp; Список необходимых документов</h3></div>
	       	<div class="panel-body">
	       		<table class="table table-striped">
				      <tbody>
				      	<% @cnt = 0 %>
				      	<% @visa.documents.each  do |doc| %>
				      		<% @cnt += 1 %>
				      		<tr class="font-s-17">
					           <td><b><%= @cnt %>. <%= doc.name %>:</b> <%= raw doc.description %></td>
					         </tr>
				      	<% end %>
				      </tbody>
				    </table>
	         </div>
    	   </div>
    		<div class="panel panel-default">
	       	<div class="panel-heading">
					<h3><span class="glyphicon glyphicon-usd"></span>&nbsp; Расходы на получение визы</h3></div>
	       	<div class="panel-body">
	       		<table class="table table-striped">
				      <tbody>
				      	<% @cnt = 0 %>
				      	<% @visa.prices.each  do |cost| %>
				      		<% @cnt += 1 %>
				      		<tr class="font-s-17">
					           <td class="col-lg-10"><b><%= @cnt %>. <%= cost.name %>:</b> <%= raw cost.description %></td>
					           <td class="col-lg-2"><b><%= cost.price %> <%= cost.currency %></b></td>
					         </tr>
				      	<% end %>
				      </tbody>
				    </table>
	         </div>
    	   </div>
    	   <div class="panel panel-default">
	       	<div class="panel-heading">
					<h3><span class="glyphicon glyphicon-ok"></span>&nbsp; Дополнительная информация</h3></div>
	       	<div class="panel-body">
	       		<table class="table table-striped">
				      <tbody>
				      	<% @cnt = 0 %>
				      	<% @visa.prices.each  do |cost| %>
				      		<% @cnt += 1 %>
				      		<tr class="font-s-17">
					           <td class="col-lg-10"><b><%= @cnt %>. <%= cost.name %>:</b> <%= raw cost.description %></td>
					           <td class="col-lg-2"><b><%= cost.price %> <%= cost.currency %></b></td>
					         </tr>
				      	<% end %>
				      </tbody>
				    </table>
	         </div>
    	   </div>
 	</div>
	<div class="col-lg-3">
       <%= link_to "", :class=>"btn btn-success btn-lg btn-block" do %>
			<span class="glyphicon glyphicon-shopping-cart"></span>			
       	Корзина
 			<sup><span class="badge">2</span></sup>      	
       <% end %> 
       <%= link_to "", :class=>"btn btn-warning btn-lg btn-block" do %>
			<span class="glyphicon glyphicon-comment"></span>
       	Связаться с нами						
       <% end %> 
	    <%= link_to "", :class=>"btn btn-info btn-lg btn-block" do %>
			<span class="glyphicon glyphicon-save"></span>	
			Скачать брошюру		
       <% end %>      
 	</div> 
 </div>
</div>