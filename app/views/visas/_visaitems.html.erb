<% @visas.each  do |visa| %>	
	<div class="col-sm-6 col-md-4 col-lg-4">
    <div class="thumbnail thumb-rel height-200">
      <%= link_to visa_path(visa.id), :title => visa.shortdesc do %>
      	<%= image_tag "USA_STD_ACDM.jpg" %>
      	<p class="p-top"><b><%= visa.country.name %></b></p>
      <% end %>
      <div class="caption">
        <h3><%= link_to visa.name, visa_path(visa.id) %></h3>
        <p title = "<%= visa.shortdesc %>"><%= truncate(visa.shortdesc, :length => 80) %></p>
        <p class="btn-absolute">
        		<%= link_to "Подробнее", visa_path(visa.id), :class => "btn btn-success btn-block" %>
        <p>
      </div>
    </div>
  </div>
<% end %>