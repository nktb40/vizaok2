<div class="container pad-top-bot-50">
	<div class="row">
		<div class="col-lg-3">
			<div class="panel panel-default">
				<div class="panel-heading">Параметры</div>
				<div class="panel-body">
					<div class="form-group">
						<%= select_tag :country_id, 
		       			options_for_select([ "Все страны", "США", "Великобритания","Канада", "Юар" ]), 
		       				:class=>"selectpicker", :data=>{:style=>"btn-info"} %>
					</div>	
					<div class="form-group">				
						<%= select_tag :immigration_id, 
		       			options_for_select([ "Неиммиграционные визы", "Иммиграционные визы"], "Неиммиграционные визы"), 
		       				:class=>"selectpicker", :data=>{:style=>"btn-info"} %>				
					</div>					
					<div class="form-group">				
						<%= select_tag :visatype_id, 
		       			options_for_select([ "Все типы виз", "Туристические визы", "Для деловых поездок" ]), 
		       				:class=>"selectpicker", :data=>{:style=>"btn-info"} %>				
					</div>	
					<%= form_tag search_visas_path, :method => "get", :remote => true do %>
						<div class="form-group">
							<%= select_tag :immigration_id, 
			       			options_for_select([ "Неиммиграционные визы", "Иммиграционные визы"], "Неиммиграционные визы"), 
			       				:class=>"selectpicker", :data=>{:style=>"btn-info"}, :onchange => "this.form.submit();" %>				
						</div>
					<% end %>		
				</div>
			</div>		
		</div>
		<div class="col-lg-9">
			<div class="panel panel-default">
				<div class="panel-heading">Школы</div>
				<div class="panel-body">
					<% @visas.each  do |visa| %>	
					<div class="media">
						<a class="pull-left" href="#">
							<%= image_tag('00.jpg', :style=>"width: 100%;") %>	
						</a>
				      <div class="media-body">
				      	<div class="col-lg-9">
				      		<%= link_to "" do %>
				      			<h4 class="media-heading"><%= visa.name %></h4>
				      		<% end %>
						        <p>
						        	  <%= truncate(visa.description, :length => 200, :separator => ' ') %>
							     </p>
							     		<%= link_to "" do %>
							     			<span class="glyphicon glyphicon-map-marker"> </span>
							     			Лондон, Великобритания
							     		<% end %>
							     <p>
															     
							     </p>
				      	</div>
				      	<div class="col-lg-3">
							    <%= link_to "" do %>
				          			<h4 class="mar-left-15">
				          				<span class="label label-success">
				          					Все программы
				          					<span class="glyphicon glyphicon-share-alt"></span>
				          				</span>
				          			</h4>
							    <% end %>	
				      	</div>
				      </div>
				    </div>
				    <% end %>
				</div>
			</div>		
		</div>
	</div>	
</div>