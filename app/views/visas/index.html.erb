   }
	function send_form(){
		 $.ajax({
		     type: "POST",
	        url: "visas/search",
	        data: {countries: $("#countries").find(":selected").val(), purposes: $("#purposes").find(":selected").val()},
	        dataType: "script"
	    });
	    return false; // prevents normal behaviour
		};
</script>
