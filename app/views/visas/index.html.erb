<div class="menu_holder content_page">
	<div class="container">
		<div class="row">
			<div class="grid_12">
				<nav>
					<ul class="sf-menu header_menu sf-js-enabled">
						<li id="first-li"><%= link_to companies_path do %>Компании<strong></strong><% end %></a></li>
						<li><%= link_to schools_path do %>Школы<strong></strong><% end %></li>
						<li class="current"><%= link_to courses_path do %> Курсы<strong></strong><% end %></li>
						<li><%= link_to residences_path do %> Проживание<strong></strong><% end %></li>
						<li id="last-li"><%= link_to others_path do %> Прочее<strong></strong><% end %></li>
					</ul>
				</nav>
			</div>
		</div>
	</div>
</div>
<div class="container">
 	<div class="row">
		<div class="grid_2">
			<%= link_to "Добавить", new_course_path, :class=>"more_btn", :remote=>true %>
		</div> 	
 	</div>
	<div id="new_course_form" class="grid_8 hline3 marg-left-0"></div>
 	<div class="wrapper hline2">
			<div class="title-box1 v2">
				<h3>Курсы</h3>
			</div>
			<div class="title-box2">
				<span class="mar3">ID</span>
				<span class="mar3">Название</span>
				<span>Описание</span>
			</div>		
			<ul class="listWithMarker">			
				<% @courses.each do |course| %>
					<li>
						<div class="grid_1">
							<span class="rank_num"><%= course.id %></span>					
						</div>
						<div class="grid_2"><%= course.name %></div>
						<div class="grid_6"><%= course.description %></div>
						<div class="grid_2">
							<%= link_to edit_course_path(course), :remote=>true do %> 
								<i class="fa fa-edit"></i>
						 	<% end %>
						 	<%= link_to course_path(course), :method => 'delete', data: { confirm: 'Удалить курс "'+course.name+'"?' } do %> 
								<i class="fa fa-trash-o"></i>
						 	<% end %>		
						</div>
					</li>	
				<% end %>
			</ul>
 	</div>
</div>