<!DOCTYPE html>
<html>
<head>
  <title>Vizaok</title>
  <%= favicon_link_tag(source='favicon.png', :rel=>"shortcut icon", :type=>"image/x-icon") %>
  <%= favicon_link_tag(source='favicon.png', :rel=>"icon", :type=>"image/x-icon") %>
  <meta name="description" content=""/>
  
  <meta name="keywords" content=""/>
  <meta name="document-state" content="Dynamic" />
  <meta name="robots" content="all" />
  <meta http-equiv="content-language" content="ru" />
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="main-container">
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">           
            <span class="sr-only">VisaOK</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, :class=>"navbar-brand" do %>
          	<span class="glyphicon glyphicon-globe"> </span>
          	VizaOk.ru
          <% end %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-6">
          <ul class="nav navbar-nav hidden-sm">
            <li <%= if current_page?(usa_visas_path) then 'class=active' end %> ><%= link_to "Визы в США", usa_visas_path %></li>  
				<li <%= if current_page?(ca_visas_path) then 'class=active' end %> ><%= link_to "Визы в Канаду", ca_visas_path  %></li>    
				<li <%= if current_page?(au_visas_path) then 'class=active' end %> ><%= link_to "Визы в Австралию", au_visas_path  %></li>
				<li <%= if current_page?(uk_visas_path) then 'class=active' end %> ><%= link_to "Визы в Великобританию", uk_visas_path  %></li>     
            <li <%= if current_page?(usa_migration_path) then 'class=active' end %>>
            	<%= link_to usa_migration_path do %>
						<b>Миграция в США</b>      
					<% end %>    
            </li>
             <!-- <li <%= if current_page?(au_migration_path) then 'class=active' end %>>
            	<%= link_to au_migration_path do %>
						<b>Миграция в Австралию</b>    
					<% end %>    
            </li> -->
          </ul>
          <div class="dropdown pull-right visible-sm">
				  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
				    Все визы
				    <span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
				      <li><%= link_to "Визы в США", usa_visas_path %></li>  
						<li><%= link_to "Визы в Канаду", ca_visas_path  %></li>    
						<li><%= link_to "Визы в Австралию", au_visas_path  %></li>
						<li><%= link_to "Визы в Великобританию", uk_visas_path  %></li>     
		            <li>
		            	<%= link_to usa_migration_path do %>
								<b>Миграция в США</b>      
							<% end %>    
		            </li>
		             <!--<li>
		            	<%= link_to au_migration_path do %>
								<b>Миграция в Австралию</b>    
							<% end %>    
		            </li> -->
				  </ul>
				</div>
        </div>       
      </div>
    </div>
    

	<div id="body-container">
      <!-- Example row of columns -->

        <%= yield %>
   </div>
  <div id="footer-container" class="panel-footer">
  		<p>© Vizaok.ru 2014</p>
  </div>
  </div>
</body>
 <script type="text/javascript" >
		$('.selectpicker').selectpicker();
 </script>
</html>