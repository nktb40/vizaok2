<script type="text/javascript" >
	function update_purpose(){
   	var options1 = {"Временная виза": 0, "Иммиграция": 1};
   	var options2 = {"Временная виза": 0};
   	var $select = $("#purposes");
   	var country = $("#countries").find(":selected").val();
   	if ($.inArray(country,["USA", "AU"])>-1){
   		$select.empty(); // remove old options
			$.each(options1, function(key, value) {
			  $select.append($("<option></option>").attr("value", value).text(key));
			});
			$('.selectpicker').selectpicker('refresh');
   	}
      else if ($.inArray(country,["UK", "CA"])>-1){
   		$select.empty(); // remove old options
			$.each(options2, function(key, value) {
			  $select.append($("<option></option>").attr("value", value).text(key));
			});
			$('.selectpicker').selectpicker('refresh');
   	}
   }
</script>
